<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="usuario"
        android:title="@string/pref_title_usuario"
        android:defaultValue="@string/pref_description_usuario"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="senha"
        android:title="@string/pref_title_senha"
        android:defaultValue="@string/pref_description_senha"
        android:selectAllOnFocus="true"
        android:inputType="textPassword"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1" />

    <CheckBoxPreference
        android:key="lembrar"
        android:title="@string/pref_title_lembrar"
        android:summary="@string/pref_description_lembrar"
        android:defaultValue="false" />

    <PreferenceScreen android:title="@string/login" android:key="Login">
        <!--<EditTextPreference android:persistent="true" android:title="teste" android:key="Username"></EditTextPreference>-->
        <!--<EditTextPreference android:title="testa" android:persistent="true" android:password="true" android:key="Password"></EditTextPreference>-->
        <!--<Preference android:layout="@layout/activity_login" android:key="loginButtons"></Preference>-->
    </PreferenceScreen>
</PreferenceScreen>